{
    "name": "node-cli-template",
    "version": "1.0.0",
    "description": "An opinionated template for creating a Node CLI app",
    "main": "dist/index.js",
    "bin": {
        "my-cli": "./dist/index.js"
    },
    "scripts": {
        "set-permissions": "chmod +x dist/index.js",
        "build": "tsc && npm run set-permissions",
        "build:watch": "concurrently \"tsc --watch\" \"npm run set-permissions\"",
        "pretest": "npm run build",
        "test": "ava"
    },
    "keywords": [
        "node",
        "node.js",
        "cli",
        "template"
    ],
    "author": "Robert Corponoi",
    "license": "MIT",
    "devDependencies": {
        "@types/yargs": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.62.0",
        "ava": "^5.1.0",
        "concurrently": "^8.0.1",
        "eslint": "^8.38.0",
        "prettier": "^2.6.2",
        "ts-node": "^10.5.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "yargs": "^17.3.1"
    }
}
